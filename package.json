    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.1",
    "loader-utils": "3.2.1",
    "prop-types": "^15.8.1",
    "react-test-renderer": "^18.2.0",
    "storybook": "^8.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^4.8.3",
    "webpack": "^5.93.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run clean && npm run build:all",
    "build:all": "npm run build:esm & npm run build:cjs & npm run copy",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "copy": "npm run copy:styles & npm run copy:styles-common",
    "copy:styles": "copyfiles -u 1 src/**/*.css dist/esm & copyfiles -u 1 src/**/*.css dist/cjs",
    "copy:styles-common": "copyfiles styles/**/*.css dist",
    "clean": "rimraf dist",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist/"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
