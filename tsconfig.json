{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "DOM",
            "ESNext"
        ],
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "**/stories",
        "node_modules",
    ]
}